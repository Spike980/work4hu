<%= render 'shared/navigation', id: "basic" %>
<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default" id="signup-panel">
    <div class="panel-body">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true, method: :put, class: "form form-horizontal", id: "edit_users_form" }) do |f| %>
        <legend>Edit <%= resource_name.to_s.humanize %></legend>
        <%= devise_error_messages! %>

        <br />

        <div>
          <div class="row">
            <div class="col-sm-4 col-sm-offset-4">
            <% if resource.avatar? %>
              <%= image_tag resource.avatar.url, alt: "user profile picture", class: "img img-responsive img-thumbnail", id: "user_avatar" %>
            <% else %>
              <%= image_tag "blank-profile.png", alt: "no profile picture", class: "img img-responsive img-thumbnail", id: "user_avatar" %>
            <% end %>
            </div>
          </div>
          <br/>
          <div class="row">
            <div class="actions text-center col-sm-6 col-sm-offset-3">
              <%= f.file_field :avatar, class: "form-control", id: "upload_avatar" %> <br/><br/>
            </div>
          </div>
        </div>

        <br />

        <div class="field form-group">
          <%= f.label :name, class: "col-sm-2" %>           
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control"%>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :email, class: "col-sm-2" %> 
          <div class="col-sm-10">
            <%= f.email_field :email, autofocus: true, class: "form-control", id: "email_id" %>
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field form-group">
          <%= f.label :password, class: "col-sm-2" %>  
          <div class="col-sm-10">
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            <i>(leave blank if you don't want to change it)</i><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
          </div>
        </div>



        <div class="field form-group">
          <%= f.label :password_confirmation, class: "col-sm-2" %>  
          <div class="col-sm-10">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
        </div>


        <div class="field form-group">
          <%= f.label :current_password, class: "col-sm-2" %> 
          <div class="col-sm-10">
            <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
            <i>(we need your current password to confirm your changes)</i><br />
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :city, class: "col-sm-2" %> 
          <div class="col-sm-10">
            <%= f.text_field :city, class: "form-control" %>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :state, class: "col-sm-2" %> 
          <div class="col-sm-10">
            <%= f.text_field :state, class: "form-control" %>
          </div>
        </div>
        
        <div class="field form-group">
        <%= f.label :gender, class: "col-sm-2" %>
          <div class="col-sm-10">
            <%= f.select :gender, options = { :Male => "M", :Female => "F" }, {}, { :class => "col-sm-2 form-control" } %> 
          </div>
        </div>

        <div class="actions text-center">
          <%= f.submit "Update", class: "btn btn-primary" %> <br/><br/>
        </div>
      <% end %>

    </div>
  </div>
<%= link_to "<< Back", :back %>
</div>







