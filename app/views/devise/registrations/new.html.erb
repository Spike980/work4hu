<%= render 'shared/navigation', id: "basic" %>
<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default" id="signup-panel">
    <div class="panel-body">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { class: "form form-horizontal", id: "signup-form" }) do |f| %>
        <legend>Sign up</legend>
        <%= devise_error_messages! %>

        <br />
        <div class="field form-group">
          <%= f.label :name, class: "col-sm-2" %>           
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control"%>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :email, class: "col-sm-2" %> 
          <div class="col-sm-10">
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :password, class: "col-sm-2" %>  
          <div class="col-sm-10">
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation, class: "col-sm-2" %>  
          <div class="col-sm-10">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
        </div>



        <div class="field form-group">
          <%= f.label :city, class: "col-sm-2" %> 
          <div class="col-sm-10">
            <%= f.text_field :city, class: "form-control" %>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :state, class: "col-sm-2" %> 
          <div class="col-sm-10">
            <%= f.text_field :state, class: "form-control" %>
          </div>
        </div>
        
        <div class="field form-group">
        <%= f.label :gender, class: "col-sm-2" %>
          <div class="col-sm-10">
            <%= f.select :gender, options = { :Male => "M", :Female => "F" }, {}, { :class => "col-sm-2 form-control" } %> 
          </div>
        </div>

        <div class="actions text-center">
          <%= f.submit "Sign up", class: "btn btn-primary" %> <br/><br/>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>

    </div>
  </div>
</div>